
	<%= simple_form_for(@thing) do |f| %>
	
	  <%= f.input :description, as: :text, :autofocus => true, input_html: { rows: "1", placeholder: "What?"} %>
	  <%= f.input :the_date, as: :string, input_html: { id: "datepicker", placeholder: "When?", autocomplete: "off"} %>
	  <%= f.input :time, as: :string, input_html: { id: "timepicker", placeholder: "When?", autocomplete: "off"} %>
	  
	
	  <div class="submit create">
	    <%= f.button :submit, "+" %>
	  </div>
	  <%= link_to 'Cancel', root_path %>
	<% end %>
