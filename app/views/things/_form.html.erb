<%= simple_form_for(@thing, html: { class: ""}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :description, as: :text, input_html: { rows: "3", placeholder: "What is it?"} %>
  <%= f.input :the_date, as: :string, input_html: { id: "datepicker", placeholder: "When?"} %>
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>